<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link rel="stylesheet" href="/assets/css/Bootstrap.min.css">
</head>

<body class="bg-primary bg-opacity-25">

    <section class="container py-5">

        <h1 class="text-center mb-4 fw-bold text-dark">üìù Task Manager</h1>

        <form action="/add-task" method="post" class="mx-auto p-5 bg-white border-0 shadow-lg rounded-4"
            style="max-width: 480px;">

            <h3 class="text-center fw-bold mb-4 text-primary">Create New Task</h3>

           
            <div class="form-floating mb-4">
                <input type="id" name="id" id="no" class="form-control border-2 shadow-sm" placeholder="Task Number" required>
                <label for="no" class="fw-semibold">Task Number</label>
            </div>
            <div class="form-floating mb-4">
                <input type="text" name="task" id="task" class="form-control border-2 shadow-sm"
                    placeholder="Task Name">
                <label for="task" class="fw-semibold">Task Name</label>
            </div>

           
            <div class="form-floating mb-4">
                <select name="priority" id="priority" class="form-select border-2 shadow-sm" style="height: 58px;">
                    <option value="">Choose Priority</option>
                    <option value="High">High</option>
                    <option value="Medium">Medium</option>
                    <option value="Low">Low</option>
                </select>
                <label for="priority" class="fw-semibold">Priority</label>
            </div>

          
            <button class="btn btn-lg btn-info text-white w-100 fw-bold shadow-sm">
                Add Task
            </button>

        </form>




        <div class="mt-5">
            <h2>Task List</h2>
            <div class="table-responsive shadow-lg rounded-4 overflow-hidden bg-white">
                <table class="table table-borderless align-middle text-center ">

                    <thead class="bg-dark text-white ">
                        <tr>
                            <th>No</th>
                            <th>Task</th>
                            <th>Priority</th>
                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% TaskList.map((task)=> { %>
                            <tr class="border-bottom">
                                <td class="fw-bold text-secondary">
                                    <%= task.id %>
                                </td>
                                <td class="fw-semibold">
                                    <%= task.task %>
                                </td>

                                <td>
                                    <% if(task.priority==="High" ){ %>
                                        <span class="badge bg-danger rounded-pill px-3 py-2">High</span>
                                        <% } else if(task.priority==="Medium" ){ %>
                                            <span
                                                class="badge bg-warning text-dark rounded-pill px-3 py-2">Medium</span>
                                            <% } else { %>
                                                <span class="badge bg-success rounded-pill px-3 py-2">Low</span>
                                                <% } %>
                                </td>

                                <td>
                                    <a href="/delete-task?taskId=<%= task.id %>"
                                        class="btn btn-sm btn-outline-danger rounded-pill px-3 me-2">Delete</a>
                                    <a href="/edit-task?taskId=<%= task.id %>"
                                        class="btn btn-sm btn-outline-primary rounded-pill px-3">Edit</a>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>

                </table>
            </div>
        </div>

    </section>

</body>

</html>